alias grep='grep --color=auto'
alias ls='ls -G'
alias cp='cp -v'
alias mv='mv -v'
alias vim='nvim'

addpath () {
    if [[ -d "$1" ]] &&  [[ ":$PATH:" != *":$1:"* ]]
    then
        export PATH="$1:$PATH"
    fi
}

local_alises="${HOME}/.zsh/zsh_aliases.local"
if [[ -f ${local_alises} ]]; then
    . ${local_alises}
fi
