slurm_job() {
  if (( ${+SLURM_JOB_ID} )); then
    echo "%F{default}(Job: ${SLURM_JOB_ID})%f% "
  fi
}

conda_env() {
  if (( ${+CONDA_PROMPT_MODIFIER} )); then
    echo "%F{default}${+CONDA_PROMPT_MODIFIER}%f% "
  fi
}

GEOMETRY_PROMPT=(${GEOMETRY_PROMPT[@]} slurm_job)
GEOMETRY_RPROMPT+=(conda_env)
